class Animal:
    def make_sound(self):
        print("This animal makes a sound.")

class Dog(Animal):
    def make_sound(self):
        print("The dog barks.")

class Cat(Animal):
    def make_sound(self):
        print("The cat meows.")

class Bird(Animal):
    def make_sound(self):
        print("The bird chirps.")

# Example usage
animals = [Dog(), Cat(), Bird()]

for animal in animals:
    animal.make_sound()






